<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Zoom Clone</title>
        <link rel="shortcut icon" href="https://d24cgw3uvb9a9h.cloudfront.net/zoom.ico" type="image/x-icon" />
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
            integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.14.0/css/all.css" />
        <link rel="stylesheet" href="../styles.css" />
        <script>
            const stripHTML = (str) => str.replace(/(<([^>]+)>)/gi, "");
            const ROOM_ID = "<%- roomID %>";
            const USERNAME = stripHTML(prompt("Enter your name"));
        </script>
        <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
        <script defer src="/socket.io/socket.io.js"></script>
        <script defer src="../script.js"></script>
    </head>
    <body>
        <main role="main">
            <div class="main__left screen-full">
                <div class="main__videos">
                    <div id="video-grid"></div>
                    <div id="share-screen"></div>
                </div>
                <div class="main__controls">
                    <div class="main__controls__block">
                        <div class="main__controls__button mute-btn" onclick="handleMicrophone()">
                            <i class="fas fa-microphone"></i>
                            <span>Mute</span>
                        </div>
                        <div class="main__controls__button video-btn" onclick="handleVideo()">
                            <i class="fas fa-video"></i>
                            <span>Stop Video</span>
                        </div>
                    </div>
                    <div class="main__controls__block mid-block">
                        <div class="main__controls__button" onclick="handleInvite()">
                            <i class="fad fa-user-plus"></i>
                            <span>Invite</span>
                        </div>
                        <div class="main__controls__button users-btn" onclick="handleScreen(this)">
                            <i class="fas fa-user-friends"></i>
                            <span>Participants</span>
                        </div>
                        <div class="main__controls__button chat-btn" id="chats" onclick="handleScreen(this)">
                            <i class="fas fa-comment-alt"></i>
                            <span>Chat</span>
                        </div>
                    </div>
                    <div class="main__controls__block">
                        <div class="main__controls__button leave-btn">
                            <span>Leave Meeting</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main__right screen-hide">
                <div class="main__right__render screen-hide" id="chat-screen">
                    <div class="main__header">
                        <h4>Chat Box</h4>
                    </div>
                    <div class="main__chat__box">
                        <ul id="messages"></ul>
                    </div>
                    <form class="main__message__container">
                        <textarea id="chat-message" cols="20" rows="1" placeholder="Type a message here"></textarea>
                        <button class="main__message__send" type="submit" id="send-btn">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </form>
                </div>
                <div class="main__right__render screen-hide" id="users-screen">
                    <div class="main__header">
                        <h4>Participants</h4>
                    </div>
                    <div class="main__users__box">
                        <ul id="users"></ul>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
